<h1>Classified Ads</h1>

<div class="post-table">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Price</th>
				<th>Location</th>
				<th>User</th>
				<th>Date Posted</th>
			</tr>
		</thead>
		<tbody>      
			<% @posts.each do |post|%>
				<tr>
					<td><%= post.title %></td>
					<td><%= number_to_currency(post.price) %></td>
					<td><%= post.location %></td>
					<td><%= post.user.username %></td>
					<td><%= post.created_at.strftime("%m/%d/%Y") %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
