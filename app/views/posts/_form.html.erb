<%= form_for [@user, @post], :html => {:multipart => true} do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%= f.label :price %>
	<%= f.text_field :price %><br>

	<%= f.label :location %>
	<%= f.text_field :location %><br>

	<%= f.label :description %>
	<%= f.text_area :description %><br>

	<%= f.file_field :photo %>

	<%= f.submit %>
<% end %>
